# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wildlankago?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Cloudinary Configuration (Required for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL (Required for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Optional: Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://www.your-domain.com

# Environment
NODE_ENV=production

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
